<h3 class='notice'><%= flash[:notice]  %><h3>

<% if admin? %>
  <h3>Recipes by <%= @user.name %>:</h3>

<% else %>
  <h1>Welcome, <%= @user.name %>!</h1>
  <h2>Recipes You've Posted:</h2>
<% end %>

<ul>
  <% @user.recipes.each do |recipe| %>
    <li><%= link_to "#{recipe.title}", recipe %></li>
  <% end %>
  <% if !admin?  %>
    <h3>Add New Recipe</h3>

  <% end %>
</ul>



